@{
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .access-denied-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 40px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 50px rgba(255, 0, 0, 0.5);
            margin-top: 100px;
        }

        .access-denied-title {
            text-align: center;
            margin-bottom: 20px;
            color: #dc3545;
        }

        .access-denied-message {
            margin-bottom: 20px;
        }

        .access-denied-back-btn {
            display: block;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="access-denied-container">
            <h2 class="access-denied-title">Access Denied</h2>
            <p class="access-denied-message">You do not have permission to access this resource.</p>
            <a href="/" class="btn btn-primary access-denied-back-btn">Go back to home</a>
        </div>
    </div>
</body>
</html>
