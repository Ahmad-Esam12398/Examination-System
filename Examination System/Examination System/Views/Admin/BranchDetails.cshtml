@model Branch 

@{
    ViewData["Title"] = "Branch Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <table class="table table-bordered detail-table">
        <tr>
            <th style="width: 30%;">Department ID</th>
            <td>@Model.BranchId</td>
        </tr>
        <tr>
            <th>Branch Name</th>
            <td>@Model.BranchName</td>
        </tr>
        <tr>
            <th>Manager Id</th>
            <td>@Model.MgrId</td>
        </tr>
    </table>
    <div class="form-group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.BranchId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
